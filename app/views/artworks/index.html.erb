<div class="container">
  <div id="index-search"><%= render 'shared/search' %></div>
  <% if @artworks.empty? %>
    <div>
      <h3>No results found for "<%= params[:search] %>"</h3>
    </div>
  <% else %>
    <div class="card-columns">
        <% @artworks.each do |art| %>
          <%= link_to artwork_path(art) do %>
            <%= render 'artworks/card-artwork', artwork: art %>
          <% end %>
        <% end %>
    </div>
  <% end %>

  <div
    id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
